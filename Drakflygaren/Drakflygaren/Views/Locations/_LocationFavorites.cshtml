@model IEnumerable<Drakflygaren.Models.LocationFavorite>

<div class="list-group">
    @if (Model.Count() > 0)
    {
        foreach (var locationFavorite in Model)
        {
            <a href="@Url.Action("Details", new { locationId = locationFavorite.Location.Id })" class="list-group-item">
                <strong>@locationFavorite.Location.Name</strong><span class="pull-right"><i class="fa fa-sun-o text-warning"></i></span>
                <br />
                @locationFavorite.Location.City<span class="pull-right">2 m/s</span>
            </a>
        }
    }
    else
    {
        <p>Lägg till dina favoriter genom att trycka på hjärtat för aktuell rad i listan med platser</p>
    }
</div>